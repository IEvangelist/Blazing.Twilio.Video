<MudGrid Justify="Justify.Center" Class="gap-4">
    <MudItem xs="10">
        <MudPaper Elevation="10" Class="pa-4" Style="background-color: var(--mud-palette-dark)">
            <MudGrid Justify="Justify.Center" Class="gap-4 align-content-center justify-center">
                <MudItem xs="1" Class="d-flex pb-2">
                    <MudLink Href="https://learn.microsoft.com/aspnet/core/blazor" Target="_blank" Class="d-flex">
                        <MudImage Src="/images/blazor.svg" Alt="Blazor logo" Elevation="0"
                                  Width="165" ObjectPosition="ObjectPosition.Center"
                                  ObjectFit="ObjectFit.Contain" Class="pb-4 pr-4" />
                    </MudLink>
                </MudItem>
                <MudItem xs="1" Class="d-flex">
                    <MudIcon Icon="@Icons.Material.Filled.Favorite" Color="Color.Secondary"
                             Size="Size.Large" Style="margin: auto" />
                </MudItem>
                <MudItem xs="1" Class="d-flex">
                    <MudLink Href="https://www.twilio.com/docs/video" Target="_blank" Class="d-flex">
                        <MudImage Src="/images/twilio.svg" Alt="Twilio logo" Elevation="0"
                                  Width="100" ObjectPosition="ObjectPosition.Center"
                                  ObjectFit="ObjectFit.Contain" />
                    </MudLink>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudItem>
    <MudItem xs="@OneSize" Class="@OneClass">
        <MudPaper Elevation="10" Class="pa-4 align-content-center justify-center mud-width-full mud-height-full">
            <div id="participant-1"></div>
        </MudPaper>
    </MudItem>
    <MudItem xs="@TwoSize" Class="@TwoClass">
        <MudPaper Elevation="10" Class="pa-4 align-content-center justify-center mud-width-full mud-height-full">
            <div id="participant-2"></div>
        </MudPaper>
    </MudItem>
</MudGrid>