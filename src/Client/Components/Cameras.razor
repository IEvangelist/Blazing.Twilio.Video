<MudSelect T="string" Label="Camera" Variant="Variant.Outlined" 
    AnchorOrigin="Origin.BottomCenter" ReadOnly="IsLoading"
    SelectedValues="new[] { _activeCamera }">
    @if (HasDevices)
    {
        foreach (var device in Devices!)
        {
            <MudSelectItem T="string" Value="@device.Label"
                OnClick="@(async () => await SelectCamera(device.DeviceId))" />
        }
    }
</MudSelect>
